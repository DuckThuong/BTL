@model IEnumerable<BTL.Data.Lecture>

@foreach (var lecture in Model)
{
    <div class="col-lg-4">
        <div class="properties properties2 mb-30">
            <div class="properties__card">
                <div class="properties__img overlay1">
                    <a href="#"><img src="@lecture.Image" alt=""></a>
                </div>
                <div class="properties__caption">
                    <p>Bài giảng</p>
                    <h3><a asp-action="Details" asp-route-id="@lecture.LectureId">@lecture.LectureName</a></h3>
                    <p>@lecture.CourseInfo</p>
                    <div class="properties__footer d-flex justify-content-between align-items-center">
                        <div class="restaurant-name">
                            <div class="rating">
                                @for (int i = 0; i < Math.Floor(lecture.Rating ?? 0); i++)
                                {
                                    <i class="fas fa-star"></i>
                                }
                                @if (lecture.Rating % 1 != 0)
                                {
                                    <i class="fas fa-star-half"></i>
                                }
                            </div>
                            <p><span>({@lecture.Rating})</span> based on @lecture.ReviewCount</p>
                        </div>
                    </div>
                    <a asp-action="Details" asp-route-id="@lecture.LectureId" class="border-btn border-btn2">Xem chi tiết</a>
                </div>
            </div>
        </div>
    </div>
}